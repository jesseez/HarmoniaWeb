{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "plugin:react/recommended",
        "google"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react", "babel"
    ],
    "parser": "babel-eslint",
    "rules": {
        "require-jsdoc": "off",
        "linebreak-style": "off",
        "comma-dangle": ["error", "never"],
        "quotes": ["error", "double"],
        "object-curly-spacing": ["error", "always"],
        "indent": ["error", 2, { "SwitchCase": 1 }],
        "max-len": "off",
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "no-invalid-this": 0,
        "babel/no-invalid-this": 1,
        "guard-for-in": "off"
    }
}
